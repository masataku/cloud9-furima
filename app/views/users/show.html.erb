<% if @user.id == @current_user.id %>
  <h2>マイページ</h2>
<% else %>
  <h2><%= @user.name %>さん</h2><%= @user.id %>
<% end %> 


<div class="container">
  <div class="user-box">
    <div class="row">
      
      
      <div class="col-sm-4">
        <div class="box-1">
        <%= render 'side_menu' %>
        </div>
      </div>
      
      
      
      <div class="col-sm-8">
        <div class="box-2">
          <div class="user-top">
            <div>
              <%= image_tag "/user_images/#{@user.image}", class: "user-top-image" %><br><br>
              <%= @user.name %><br>
              出品数<%= @user.saling_items.count + @user.sold_items.count %>
            </div>
          </div>
          
          <p>ユーザー名：<%= @user.name %></p>
          <p>メールアドレス：<%= @user.email %></p>
          <p>ポイント：<%= @user.point %>P</p>
          <p>自己紹介：<%= @user.text %></p>
          
          <% if @user.id == @current_user.id %>
            <%= link_to "情報の編集", edit_user_path(@current_user) %>
          <% end %>  
          
          ・<%= link_to "出品一覧", "/users/#{@user.id}/saling_index" %>・<%= link_to "売却一覧", "/users/#{@user.id}/sold_index" %>・・<%= link_to "いいね一覧", "/users/#{@current_user.id}/like_index" %>・<%= link_to "購入一覧", "/users/#{@user.id}/buyed_index" %>
          
          
          
          <% if @user.id == @current_user.id %>
            <%= link_to "退会する", user_path(@user), method: :delete, data: {confirm: "ポイント：#{@user.point}Pは消えてしまいます。本当に退会しますか？"} %>
          <% end %>
        </div>
      </div>
      
    </div> 
  </div>
</div>


<%= render 'shared/display_btn' %>

